@model TravelApiClient.Models.Review
@if (@ViewBag.userName == @Model.UserName && @ViewBag.expired == false)
{
  <div>
    @using (Html.BeginForm())
    {

      @Html.HiddenFor(x=>x.ReviewId)
      <div class="form-group">
        @Html.LabelFor(x=>x.Rating)
        @Html.DropDownList("Rating",
    Html.GetEnumSelectList<Rating>(),
    "Select Rating",new { @class = "form-control" })
      </div>
      <div class="form-group">
        @Html.LabelFor(x=>x.Country)
        @Html.TextBoxFor(x=>x.Country,new { @class = "form-control" })
      </div>
      <div class="form-group">
        @Html.LabelFor(x=>x.City)
        @Html.TextBoxFor(x=>x.City,new { @class = "form-control" })
      </div>

          <input type="submit" value="Edit" class="form-control">
    }
  </div>
}
else
{
  <div>You must be logged in as @Model.UserName to edit this review</div>
}
